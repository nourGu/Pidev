{% block row %}
    <h1>Terrain index</h1>
    {% for message in app.flashes('info') %}
        <div class="alert alert-success alert-dismissible" id="myAlert">
                <strong>Success!</strong> {{ message }}
        </div>

    {% endfor %}
    {#<form methode="POST" action="{{ path('terrain_search') }}">
        <input type="text" name="search">
        <input type="submit" value="Search">
    </form>#}

    <table class="table" class="table table-striped">
        <thead>
            <tr>
                <th>ImageTerrain</th>
                <th>NumTel</th>
                <th>Localisation</th>
                <th>Description</th>
                <th>Status</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for terrain in terrains %}
            <tr>

                <td>
                    <img class="img-fluid w-10" src="{{ vich_uploader_asset(terrain, 'imageFile') }}" >
                  {{ terrain.imageFile }}</td>
                <td>{{ terrain.numTel }}</td>
                <td>{{ terrain.localisation }}</td>
                <td>{{ terrain.description }}</td>
                <td>{{ terrain.status }}</td>
                <td>{{ terrain.prix }}</td>
                <td>
                    <button class="btn bg-gradient-success w-50 mb-0 toast-btn" type="button" data-target="successToast">
                        <a href="{{ path('terrain_show', {'id': terrain.id}) }}">show</a>
                    </button>
                    <button class="btn bg-gradient-info w-50 mb-0 toast-btn" type="button" data-target="infoToast">
                        <a href="{{ path('terrain_edit', {'id': terrain.id}) }}">edit</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no terrains found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% block href %}
    <a href="{{ path('terrain_new') }}">Create new</a>
    {{ knp_pagination_render(terrains) }}
{% endblock %}
{% endblock %}
