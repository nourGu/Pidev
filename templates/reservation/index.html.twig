{% extends 'back.html.twig' %}

{% block title %}Reservation{% endblock %}
{% block navlink%}
    Gestion
{% endblock %}
{% block navItem%}
    <a href="{{ path('terrain_index') }}">gestion des terrains</a>
    <a href="{{ path('type_index') }}">gestion des types</a>
    <a href="{{ path('app_reservation_index') }}">gestion reservations</a>
{% endblock %}

{% block row %}
{% endblock %}

 {% block globchart %}
 {% endblock %}
{% block cardDel %}
{% endblock %}

{% block table %}
    <h1>Check all reservations</h1>
    {% for message in app.flashes('info') %}
        <div class="alert alert-success alert-dismissible" id="myAlert">
            <strong>Success!</strong> {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Start</th>
                <th>End</th>
                <th>BackgroundColor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.start ? reservation.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.end ? reservation.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.backgroundColor }}</td>
                <td>
                    <button class="btn bg-gradient-success w-50 mb-0 toast-btn" type="button" data-target="successToast">
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    </button>
                    <button class="btn bg-gradient-info w-50 mb-0 toast-btn" type="button" data-target="infoToast">
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                    </button>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
