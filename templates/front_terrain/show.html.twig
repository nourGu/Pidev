{% block image %}
    <div class="carousel-item active">
        <img class="w-100 h-100" src="{{ asset("front/img/foot.jpg")}}" alt="">
    </div>
{% endblock %}
  {% block name%} <h3 class="font-weight-semi-bold">Terrain Type : {{ terrain.type.libelleType }}</h3>{% endblock %}

 {% block prix %}<h3 class="font-weight-semi-bold mb-4">Price :{{ terrain.prix }}</h3>{% endblock %}

           {% block description%}
               <p class="mb-4">{{ terrain.description }}</p>
           {% endblock %}
{% block phone %}<p class="text-dark font-weight-medium mb-0 mr-3">Propritaire Phone :{{ terrain.numTel }}</p>{% endblock %}



{% block body %}
        <div class="card product-item border-0">
            {% for terrains in terrain %}
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="{{ asset("front/img/foot.jpg")}}" alt="">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-3 pb-3">
                            <h6 class="text-truncate mb-3">{{ terrains.localisation }}</h6>
                            <div class="d-flex justify-content-center">
                                <h6>{{ terrains.prix }}</h6><h6 class="text-muted ml-1"><del>{{ terrains.prix }}</del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="{{ path('show_terrain', {'id': terrains.id}) }}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        </div>
            {% endfor %}
        </div>
    </div>

    <div class="col-md-9 pb-5">
        <div id="map"></div>
        <script>
            function initMap() {
                const myLatLng = { lat: {{ terrain.latitude }}, lng: {{ terrain.longitude }} };
                const map = new google.maps.Map(document.getElementById("map"), {
                    zoom: 5,
                    center: myLatLng,
                });

                new google.maps.Marker({
                    position: myLatLng,
                    map,
                    title: {{ terrain.localisation }},
                });
            }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDreHP-oL-wQU223lIe9j0EeoL5ybs83IE&callback=initMap&v=weekly" async defer></script>
    </div>

{% endblock %}
